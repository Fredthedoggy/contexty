{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es2015",
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "build",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "cli"
  ]
}
